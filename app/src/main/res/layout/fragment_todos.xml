<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.TodosFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/TodoFragment_Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@color/primary"
        android:text="Things to do:"
        android:textColor="@color/bone_white"
        android:textSize="26sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/TodoFragment_Rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/TodoFragment_Title"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/TodoFragment_FloatingButt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/plus_icon"></com.google.android.material.floatingactionbutton.FloatingActionButton>


</RelativeLayout>