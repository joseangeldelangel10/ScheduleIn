<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_or_signup_bg"
    tools:context=".LoginOrSignupActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

                <Button
                    android:id="@+id/buttLoginAct"
                    android:layout_width="wrap_content"
                    android:layout_height="68dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="91dp"
                    android:layout_marginTop="380dp"
                    android:layout_marginEnd="91dp"
                    android:background="@color/primary"
                    android:text="Log In" />

                <Button
                    android:id="@+id/buttSignup"
                    android:layout_width="wrap_content"
                    android:layout_height="68dp"
                    android:layout_below="@+id/buttLoginAct"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="91dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginEnd="91dp"
                    android:background="@color/secondary"
                    android:text="Sign Up" />

                <TextView
                    android:id="@+id/tvTipOfTheDay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/buttSignup"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="90dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginEnd="90dp"
                    android:fontFamily="@font/josefin_sans_bold"
                    android:text="TextView"
                    android:textColor="@color/emphasis1"
                    android:textSize="20sp" />

        </RelativeLayout>

</ScrollView>
