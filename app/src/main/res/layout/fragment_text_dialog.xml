<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="380dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    tools:context=".fragments.TextDialogFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/TextDialog_Prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:text="What's next?"
        android:textSize="28sp" />

    <EditText
        android:id="@+id/TextDialog_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TextDialog_Prompt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:hint="complete plans to mars voyage..."></EditText>

    <Button
        android:id="@+id/TextDialog_AcceptButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TextDialog_et"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="0dp"
        android:background="@color/primary"
        android:text="add +"></Button>

</RelativeLayout>